@model ExercicioViewModel
@{
    ViewData["Title"] = "Remover Exercício";
}

<div class="modal-header">@ViewData["Title"]</div>
<div class="modal-alert-message">
    <h6>Tem certeza que deseja remover este exercício?</h6>
</div>
<div class="modal-body">
    <partial name="_Treino" model="@Model.Treino" />
    <hr />
    <h6 class="text-secondary">Exercício</h6>
    <partial name="_Exercicio" />
</div>
<div class="modal-footer">
    <form asp-action="RemoverExercicio">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
    <input type="button" class="btn btn-dark" value="Fechar" data-dismiss="modal" />
</div>
