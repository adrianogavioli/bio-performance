@model ExercicioViewModel

@{
    ViewData["Title"] = "Adicionar Exercício";
}

<div class="modal-header">@ViewData["Title"]</div>
<form asp-action="AdicionarExercicio">
    <vc:summary-modal></vc:summary-modal>
    <div class="modal-body">
        <partial name="_Treino" model="@Model.Treino" />
        <hr />
        <input type="hidden" asp-for="TreinoId" />
        <div class="form-group">
            <label asp-for="Ordem" class="control-label"></label>
            <input asp-for="Ordem" class="form-control" />
            <span asp-validation-for="Ordem" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CatalogoExercicioId" class="control-label"></label>
            <select asp-for="CatalogoExercicioId" class="form-control" asp-items="@(new SelectList(Model.CatalogoExerciciosDropdown, "Id", "Descricao"))">
                <option></option>
            </select>
            <span asp-validation-for="CatalogoExercicioId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Repeticao" class="control-label"></label>
            <input asp-for="Repeticao" class="form-control" />
            <span asp-validation-for="Repeticao" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label asp-for="Observacao" class="control-label"></label>
            <textarea rows="3" asp-for="Observacao" class="form-control"></textarea>
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Adicionar" class="btn btn-success" />
        <input type="button" class="btn btn-dark" value="Fechar" data-dismiss="modal" />
    </div>
</form>
