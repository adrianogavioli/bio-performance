@model DietaRefeicaoAlimentoViewModel
@{
    ViewData["Title"] = "Substituições";
}

<div class="modal-header">@ViewData["Title"]</div>
<div class="modal-body">
    <partial name="_Refeicao" />
    <hr />
    <h6 class="text-secondary">Substituições</h6>
    <a asp-action="AdicionarSubstituicao" asp-route-dietaRefeicaoAlimentoId="@Model.Id" class="btn btn-block btn-primary" data-modal-reverso>Adicionar Substituição</a>
    <div class="mt-3">
        <partial name="_Substituicoes" />
    </div>
</div>
<div class="modal-footer">
    <input type="button" class="btn btn-dark" value="Fechar" data-dismiss="modal" />
</div>

<script>
    $(document).ready(function () {
        AjaxModalReverso();
    });
</script>
