@model AtendimentoViewModel

@{
    ViewData["Title"] = "Adicionar Atendimento";
}

<form asp-action="Create">
    <div class="container-toolbar tb-top">
        <h6 class="title">@ViewData["Title"]</h6>
        <div class="toolbar">
            <button type="submit" class="tb-button"><i class="fa fa-cloud"></i><br />gravar</button>
            <a asp-action="Index" class="tb-button"><i class="fa fa-chevron-left"></i><br />voltar</a>
        </div>
    </div>
    <div class="container-body">
        <vc:summary></vc:summary>
        <div class="card card-default">
            <div class="card-default-header">Novo Atendimento</div>
            <div class="card-default-body">
                <div class="form-group">
                    <label asp-for="PacienteId" class="control-label"></label>
                    <select asp-for="PacienteId" class="form-control" asp-items="@(new SelectList(Model.PacientesDropdown, "Id", "Nome"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfissionalId" class="control-label"></label>
                    <select asp-for="ProfissionalId" class="form-control" asp-items="@(new SelectList(Model.ProfissionaisDropdown, "Id", "Nome"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="ProfissionalId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Objetivo" class="control-label"></label>
                    <textarea asp-for="Objetivo" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Objetivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RestricaoMedica" class="control-label"></label>
                    <textarea asp-for="RestricaoMedica" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="RestricaoMedica" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RestricaoAlimentar" class="control-label"></label>
                    <textarea asp-for="RestricaoAlimentar" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="RestricaoAlimentar" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observacao" class="control-label"></label>
                    <textarea asp-for="Observacao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observacao" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="container-toolbar tb-bottom">
        <div class="toolbar">
            <button type="submit" class="tb-button"><i class="fa fa-cloud"></i><br />gravar</button>
            <a asp-action="Index" class="tb-button"><i class="fa fa-chevron-left"></i><br />voltar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}