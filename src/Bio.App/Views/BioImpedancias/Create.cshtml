@model BioImpedanciaViewModel

@{
    ViewData["Title"] = "Adicionar Bioimpedância";
}

<form asp-action="Create">
    <div class="container-toolbar tb-top">
        <h6 class="title">@ViewData["Title"]</h6>
        <div class="toolbar">
            <button type="submit" class="tb-button"><i class="fa fa-cloud"></i><br />gravar</button>
            <a asp-action="Index" class="tb-button"><i class="fa fa-chevron-left"></i><br />voltar</a>
        </div>
    </div>
    <div class="container-body">
        <vc:summary></vc:summary>
        <div class="card card-default">
            <div class="card-default-header">Nova Bioimpedância</div>
            <div class="card-default-body">
                <div class="form-group">
                    <label asp-for="PacienteId" class="control-label"></label>
                    <select asp-for="PacienteId" class="form-control" asp-items="@(new SelectList(Model.PacientesDropdown, "Id", "Nome"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AguaCorporal" class="control-label"></label>
                    <input asp-for="AguaCorporal" class="form-control" />
                    <span asp-validation-for="AguaCorporal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GorduraCorporal" class="control-label"></label>
                    <input asp-for="GorduraCorporal" class="form-control" />
                    <span asp-validation-for="GorduraCorporal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Proteinas" class="control-label"></label>
                    <input asp-for="Proteinas" class="form-control" />
                    <span asp-validation-for="Proteinas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Minerais" class="control-label"></label>
                    <input asp-for="Minerais" class="form-control" />
                    <span asp-validation-for="Minerais" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TaxaMetabolicaBasal" class="control-label"></label>
                    <input asp-for="TaxaMetabolicaBasal" class="form-control" />
                    <span asp-validation-for="TaxaMetabolicaBasal" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="container-toolbar tb-bottom">
        <div class="toolbar">
            <button type="submit" class="tb-button"><i class="fa fa-cloud"></i><br />gravar</button>
            <a asp-action="Index" class="tb-button"><i class="fa fa-chevron-left"></i><br />voltar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

