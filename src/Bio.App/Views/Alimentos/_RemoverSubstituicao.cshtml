@model AlimentoSubstituicaoViewModel
@{
    ViewData["Title"] = "Remover Substituição";
}

<div class="modal-header">@ViewData["Title"]</div>
<div class="modal-alert-message">
    <h6>Tem certeza que deseja remover esta substituição?</h6>
</div>
<div class="modal-body">
    <div class="form-group">
        <label class="control-label">Alimento</label>
        <input asp-for="AlimentoSubstituto.Descricao" class="form-control" disabled />
    </div>
</div>
<div class="modal-footer">
    <form asp-action="RemoverAlimentoSubstituto">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
    <input type="button" class="btn btn-dark" value="Fechar" data-dismiss="modal" />
</div>